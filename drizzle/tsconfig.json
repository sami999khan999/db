{
  "compilerOptions": {
    "target": "ES6", // Set target JavaScript version
    "module": "commonjs", // CommonJS module system
    "rootDir": "src", // Where your TypeScript source files are
    "outDir": "dist", // Where the compiled JS files go
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Allows importing of non-ESM modules
    "skipLibCheck": true, // Skip checking of library types
    "forceConsistentCasingInFileNames": true // Ensure file names have consistent casing
  },
  "include": ["src/**/*.ts"], // Include TypeScript files from the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules
}
